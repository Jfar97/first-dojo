subprocess.run(["gcc", "-o", str(dir / "RunTest"), str(dir / "wrapper.c")])

os.chmod(dir / ".hidden_runtest.py", 0o600)
os.chmod(dir / "RunTest", 0o4755)
os.chmod(dir / "get_flag", 0o700)  
